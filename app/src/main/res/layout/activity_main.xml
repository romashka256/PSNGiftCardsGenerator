<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gnnsnowszerro.com.startpage.MainActivity"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/logo_start_page"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/name_textview_start_page"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/logo_start_page"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:text="PSN\n Code Generator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/below_name_textview"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_below="@id/name_textview_start_page"
        android:textAlignment="center"
        android:text="Exchange coins for\n PLAYSTATION Promo Codes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"/>

    <Button
        android:background="@drawable/shape_start_page_button"
        android:id="@+id/get_started_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textColor="#fff"
        android:text="GET STARTED"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/below_name_textview"/>

    <TextView
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:text="This app and the services are not\n associated, affiliated, endorsed or\n sponsored by PlayStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="16sp"/>
</RelativeLayout>
