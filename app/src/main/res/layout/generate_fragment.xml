<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gnnsnowszerro.com.generate.GenerateFragment"
    android:background="@drawable/gradient">

    <View
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:background="@drawable/dottedline" />

    <TextView
        android:id="@+id/generate_fragment_discount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="105dp"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/promo_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="190dp"
        android:hint="PROMO\n CODE"
        android:textSize="26sp"/>
    <View
        android:layout_below="@id/promo_code"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="185dp"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_start_page_button" />

    <TextView
        android:text="*********"
        android:textSize="27sp"
        android:layout_below="@id/promo_code"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="190dp"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:textColor="#fff"
     />

    <View
        android:layout_below="@id/generate_fragment_discount_textview"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:background="@drawable/shape_start_page_button" />

    <TextView
        android:layout_below="@id/generate_fragment_discount_textview"
        android:id="@+id/generate_fragment_coins_textview"
        android:layout_marginTop="55dp"
        android:textColor="#fff"
        android:layout_marginLeft="85dp"
        android:textAlignment="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        />

    <ImageView
        android:layout_below="@id/generate_fragment_discount_textview"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/coin"
        />
    
    <Button
        android:id="@+id/generate_fragment_generate_button"
        android:text="GENERATE"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_start_page_button_white_background"/>

    <TextView
        android:id="@+id/generate_fragment_node_textview"
        android:layout_below="@id/generate_fragment_generate_button"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Note:\nPlease input your correct and true email in order for us to\nsend the rewards to your inbox. We will send the rewards to\nwithin 24-72 hours"/>

    <EditText
        android:id="@+id/generate_fragment_edittext"
        android:layout_below="@id/generate_fragment_node_textview"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:hint="Input your email"
        android:background="@drawable/shape_start_page_button"/>

    <Button
        android:id="@+id/generate_fragment_redeem_button"
        android:text="REDEEM"
        android:layout_below="@id/generate_fragment_edittext"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_start_page_button_white_background"/>
    <LinearLayout
        android:id="@+id/generate_banner"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/coupon_banner"
            layout="@layout/banner" />
    </LinearLayout>
</RelativeLayout>
